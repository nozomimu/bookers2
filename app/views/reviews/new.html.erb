<table cellpadding="5">
	<thead>
		<tr>
<h2>Books</h2>
<th>Title</th><th>body</th>
</tr>
</thead>

<tbody>
<%= @reviews.each do |review| %>
<tr>
<td><%= review.title %></td>
<td><%= review.body %></td>
<td><%= link_to "Show", review %></td>
<td><%= link_to "Edit", edit_review_path(review.id) %></td>
<td><%= link_to "Destroy", review_path(review.id), method: :delete,"data-confirm" => "Are you sure?" %>
</td></tr>
<% end %>
</tbody></table>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@review) do |f| %>

<th><h5>Title</h5><%= f.text_field :title %></th>
<h5>Body</h5>
<%= f.text_area :body %><br>


<br><%= f.submit 'Create Book' %>
<% end %>



  <%= button_tag( class: "btn btn-primary btn") do %>
  <%= content_tag :span, "Create Book" %>
<% end %>
